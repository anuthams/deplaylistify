{
    "manifest_version": 3,
    "name": "deplaylistify",
    "version": "0.1",
    "description": "Prevent Youtube from opening videos as playlists",
    "icons": {
        "48": "icons/icon-on.svg",
        "96": "icons/icon-on.svg"
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.youtube.com/*"
            ],
            "js": [
                "deplaylistify.js"
            ],
            "run_at": "document_start"
        }
    ],
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "action": {
        "default_icon": "icons/icon-on.svg",
        "default_title": "Deplaylistifying on this tab"
    },
    "permissions": [
        "activeTab",
        "storage",
        "tabs"
    ]
}